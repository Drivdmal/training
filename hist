
hist(grid=False,                #без сетки
     alpha=.5,                  #прозрачность
     bins=100,                  #корзины
     title = 'histogramma',     #название гистограммы
     rot=45,                    #разворот названий признаков по оси х
     figsize=(15,5),            #размер гистограммы
     rwidth=.9,                 #ширина столбцов в %
     density=True,              #для линейных признаков, частота
     orientation='horizontal',  #ориентация
     color='#FFCF56',           #цвет столбцов
     fontsize=15                #размер шрифта
     )
